<%- include ('partials/nav') %>

<div class="breadcrumbs">
    <div class="container">
        <a href="/shop">Home</a>
        <i class="fa fa-chevron-right breadcrumb-separator"></i>
        <span>Shop</span>
    </div>
</div>

<div class="products-section container">
    <div class="sidebar">

        <h3 class="mt-3">Les catégories</h3>

        <ul>
            <!-- Étape 5 Remplacer cette liste par une bloucle sur la variable `categories`-->
            <% for(let categorie of categories) {%>
            <li>
                <a href="/category/<%= categorie.id %>"> Catégorie <%= categorie.name %> </a>
            </li>
            <% } %>
        </ul>
    </div>

    <div>
        <div class="products text-center">

            <!-- Remplacer cette liste par une bloucle sur la variable `products`-->
            <% for(let product of products) {%>
            <div class="product">
                <a href="/product/<%= product.id %>">
                    <img src="<%= product.image %>" alt="<%= product.title %>" />
                </a>
                <a href="/product/<%= product.id %>">
                    <div class="product-name"><%= product.title %></div>
                </a>
                <div class="product-price"><%= product.price %></div>
            </div>     
            <% } %>
        </div>
    </div>
</div>

<% include ('partials/foot') %>
